/**index.wxss**/
.container {
  padding: 120rpx 48rpx 0;
  background: #fefefe;
}
.userinfo {
  display: flex;
  flex-direction: column;
}

.userinfo-avatar {
  width: 74rpx;
  height: 74rpx;
  border-radius: 50%;
  box-shadow:#eeeeee 0px 0px 2px;
}

.userinfo-nickname {
  color: #00001f;
  margin-top: 50rpx;
  font-size: 60rpx;
  font-weight: 600;
}

.desc {
  margin-top: 24rpx;
  font-size: 40rpx;
}

.content {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-top: 40rpx;
}

.content .item {
  position: relative;
  width: 312rpx;
  box-sizing: border-box;
  background: #ffffff;
  margin-top: 26rpx;
  box-shadow:#f3f3f3 0px 0px 2px;
  border-radius: 12rpx;
  padding: 36rpx 40rpx;
  height: 350rpx;
}
.content .item .to-do-wrapp {
  position: relative;
  flex-direction: column;
  justify-content: space-between;
}
.content .item .circle {
  background: #7462e3;
  border-radius: 50%;
  opacity: 0.2;
  height: 40rpx;
  width: 40rpx;
}

.content .item .circle-inner {
  position: absolute;
  top: 46rpx;
  left: 50rpx;
  z-index: 2;
  background: #7462e3;
  border-radius: 50%;
  height: 20rpx;
  width: 20rpx;
}

.content .item .to-do-name {
  margin-top: 135rpx;
  color: #000000;
}

.content .item .task {
  margin-top: 30rpx;
  font-size: 26rpx;
  color: #8b8b8b;
}
.content .item .add {
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 156rpx;
  background: #586cfd;
  border-radius: 12rpx;
}